<?xml version="1.0" encoding="UTF-8"?>  
<configuration>  
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">  
        <encoder>  
            <!-- %.-1level 只显示信息级别的首字母,%-5level 左对齐显示信息级别全称 -->  
            <!-- 如需自定义关键字，用 %mdc{键名} 表示,程序中用MDC.put("键名","键值")设置，可动态设置 [%logger:%line]-->  
            <Pattern>[%date{HH:mm:ss}] [%-5level] --%mdc{client} %msg%n</Pattern>  
        </encoder>>  
    </appender>  
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">  
        <file>${log.path}/mait-web.log</file>  
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">  
            <FileNamePattern>${log.path}/mait-web.%d{yyyy-MM-dd}.log</FileNamePattern>  
        </rollingPolicy>  
        <encoder>  
            <Pattern>[%date{yyyy-MM-dd HH:mm:ss}] [%-5level] [%logger:%line] --%mdc{client} %msg%n</Pattern>  
        </encoder>>  
    </appender>  
    <!-- <logger name="org.springframework" level="${log.level}"/> -->  
    <logger name="org.springframework" level="${log.level}"/>  
    <logger name="java.sql.Connection" level="${log.level}"/>  
    <logger name="java.sql.ResultSet" level="${log.level}"/>  
    <root level="${log.level}">  
        <appender-ref ref="STDOUT"/>  
        <appender-ref ref="FILE"/>  
    </root>  
    <!-- appender name="FAILSQL" class="ch.qos.logback.core.FileAppender">  
        <file>log/fail.sql.log</file>  
        <encoder>  
            <Pattern>%date{yyyy-MM-dd HH:mm:ss} %msg%n</Pattern>  
        </encoder>  
    </appender>  
    <logger name="com.boaotech.osgi.posdb.FailSqlLog">  
        <appender-ref ref="FAILSQL"/>  
    </logger -->  
</configuration>  